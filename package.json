{
  "name": "weekly-git-summary",
  "version": "1.0.0",
  "description": "A CLI tool to generate weekly git commit summaries",
  "main": "build/index.js",
  "type": "module",
  "license": "MIT",
  "author": "yinzhenyu.su@gmail.com",
  "keywords": ["git", "cli", "summary", "commit", "weekly", "report", "cross-platform"],
  "homepage": "https://github.com/yinzhenyu-su/weekly-git-summary#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/yinzhenyu-su/weekly-git-summary.git"
  },
  "bugs": {
    "url": "https://github.com/yinzhenyu-su/weekly-git-summary/issues"
  },
  "bin": {
    "weekly-git-summary": "./build/cli.js"
  },
  "files": [
    "build/cli.js",
    "build/weekly-git-summary.js",
    "build/weekly-git-summary.sh",
    "build/converter.sh",
    "LICENSE",
    "README.md",
    "CLAUDE.md",
    "git-log.html"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "bun run ./build.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:ci": "chmod +x scripts/test-ci.sh && ./scripts/test-ci.sh",
    "test:nodejs": "node build/weekly-git-summary.js --help && node build/weekly-git-summary.js --json --since 2023-01-01"
  },
  "dependencies": {
    "@types/node": "^22.14.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "volta": {
    "node": "22.14.0"
  }
}